!!! 5
%html(xmlns='http://www.w3.org/1999/xhtml' lang='pt-BR' xml:lang='pt-BR')
  %head
    %title Administração

    %meta(http-equiv="Content-Type" content="text/html; charset=UTF-8")
    %meta(name="robots" content="none")
    %meta(name="author" content="manapot")
    = csrf_meta_tag

    %link(rel="shortcut icon" xhref="favicon.ico" mce_href="favicon.ico" type="image/x-icon")

    = stylesheet_link_tag 'admin'
    = stylesheet_link_tag '/fancybox/jquery.fancybox-1.3.0.css', '/jwysiwyg/jquery.wysiwyg.css', :cache => true

    /[IE 6]
      = stylesheet_link_tag 'admin_ie6'

    = javascript_include_tag 'jquery.min'
    = javascript_include_tag 'admin/jquery-ui-1.8.9.custom.min', 'admin/jquery.tools.min', '/fancybox/jquery.fancybox-1.3.0.pack.js', '/jwysiwyg/jquery.wysiwyg.js', :concat => "jquery_plugins"
    = javascript_include_tag 'rails', 'nested_form', 'admin/admin'

    :javascript
      var selected = "##{controller.controller_name}"

    = yield :head

  %body
    #header
      Área de Adminstração
    #wrapper
      #inner_wrapper
        %ul#menu
          = render :partial => 'layouts/admin/menu'

        #body
          %h1= @page_title

          %ul#submenu
            = yield :submenu

          - if flash[:notice]
            %p.notice= flash[:notice]

          #page_content
            = yield

