!!! Transitional
%html(xmlns='http://www.w3.org/1999/xhtml' lang='pt-BR' xml:lang='pt-BR')
  %head
    %title= "<%= app_name.titleize %>#{' :: ' + @page_title unless @page_title.nil?}"

    %meta(http-equiv="Content-Type" content="text/html; charset=UTF-8")
    %meta(http-equiv="content-language" content="pt-br")
    %meta(name="author" content="")
    %meta(name="description" content="")
    %meta(name='keywords' content="")
    = csrf_meta_tag

    %link(rel="shortcut icon" xhref="favicon.ico" mce_href="favicon.ico" type="image/x-icon")

    = stylesheet_link_tag 'application'
    =# stylesheet_link_tag "/fancybox/jquery.fancybox-1.3.0.css"

    = javascript_include_tag 'jquery.min', 'rails'
    =# javascript_include_tag 'jquery.flash.min'
    =# javascript_include_tag '/fancybox/jquery.fancybox-1.3.0.pack'
    =# javascript_include_tag 'jquery.easing-1.3.pack'
    =# javascript_include_tag 'jquery.livequery'
    =# javascript_include_tag 'DD_belatedPNG_0.0.8a-min'
    = javascript_include_tag 'application'

    = yield :head

  %body
    = yield

